<Window x:Class="PLWPF.AddUnitWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF"
        mc:Ignorable="d"
        Title="AddUnitWindow" Height="622.686" Width="455.643">
    <Grid>
        <!--#region ligne et colonne-->
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        <!--#endregion-->
        <Label Content="ADD New Hosting Unit"
               Grid.Row="0"
               Margin="58,0,63.6,0.4"
               FontSize="30"/>
        <Grid x:Name="details"
              Grid.Row="1">
            <!--#region ligne et colonne-->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="189.6"/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <!--#endregion-->
            <!--#region host's information-->
            <Label Content="Host's Information"
                   Grid.Row="0"
                   Grid.Column="0" Margin="0,0,24,32.6" Grid.RowSpan="2" Grid.ColumnSpan="2"/>
            <Label Content="First Name :"
                   Margin="60,0.2,24,33.2"
                   Grid.Row="1" Grid.RowSpan="2" Grid.ColumnSpan="2"/>
            <TextBox x:Name="firstName"
                     Text="{Binding privateName, Mode=TwoWay}"
                     Margin="47.6,0.2,-187,32.2"
                     Grid.RowSpan="2" Grid.Row="1" Grid.Column="1"
                     />
            <Label Content="Last Name :"
                   Margin="60,0.4,24,0.2"
                   Grid.Row="2" Grid.ColumnSpan="2"/>
            <TextBox x:Name="familyName" 
                     Grid.Row="2"
                     Margin="47.6,0.4,-187,32" Grid.RowSpan="2" Grid.Column="1"  
                     />
            <Label Content="Phone Number :"
                   Margin="60,33.4,24,0"
                   Grid.Row="2" Grid.RowSpan="2" Grid.ColumnSpan="2"/>
            <TextBox x:Name="phoneNumber"
                     Text="{Binding phoneNumber, Mode=TwoWay}" 
                     Grid.Row="2" Margin="47.6,33.4,-187,32.6" Grid.RowSpan="3" Grid.Column="1"  
                     />
            <Label Content="Mail Address :"
                   Margin="60,0,24,33.2"
                   Grid.Row="4" Grid.RowSpan="2" Grid.ColumnSpan="2"/>
            <TextBox x:Name="mailAddress"
                     Text="{Binding mailAddress, Mode=TwoWay}" 
                     Grid.Row="4" Margin="47.6,0,-187,33.2" Grid.RowSpan="2" Grid.Column="1" 
                     />
            <!--#endregion-->
            <!--#region bank's information-->
            <Label Content="Bank's Information"
                   Grid.Row="5" Margin="0,0.4,24,0.2" Grid.ColumnSpan="2"/>
            <Label Content="Host ID :"
                   Margin="60,33.4,24,0"
                   Grid.Row="5" Grid.RowSpan="2" Grid.ColumnSpan="2"/>
            <TextBox x:Name="hostKey"
                     Text="{Binding hostKey, Mode=TwoWay}" 
                     Grid.Row="5" Margin="47.6,33.4,-187,0" Grid.RowSpan="2" Grid.Column="1" 
                     />
            <Label Content="Bank's Name :"
                   Margin="60,1,24,32.4"
                   Grid.Row="7" Grid.RowSpan="2" Grid.ColumnSpan="2" />
            <ComboBox 
                   x:Name="BankComboBox"               
                   Grid.Row="7"
                   SelectedItem="{Binding Bank}"
                   Margin="47.6,1,-187,32.4" Grid.RowSpan="2" Grid.Column="1"
                />
            <Label Content="Num's Branch :"
                   Margin="60,0.4,24,0.4"
                   Grid.Row="8" Grid.ColumnSpan="2"/>
            <TextBox x:Name="numBranch"
                     Grid.Row="8"
                     Margin="47.6,0.4,-59,33" Grid.RowSpan="2" Grid.Column="1"/>
            <Label Content="Num's Bank Account :"
                   Margin="60,32.4,24,0"
                   Grid.Row="8" Grid.RowSpan="2" Grid.ColumnSpan="2"/>
            <TextBox x:Name="numBankAccount"
                     Grid.Row="8"
                     Margin="47.6,32.4,-187,0" Grid.RowSpan="2" Grid.Column="1"/>
            <Label Content="Collection Clearance :"
                   Margin="60,0,24,33.2"
                   Grid.Row="10" Grid.RowSpan="2" Grid.ColumnSpan="2"/>
            <CheckBox IsChecked="False"
                      Grid.Row="10"
                      Margin="47.6,7,-24,33.2" Grid.RowSpan="2" Grid.Column="1"/>
            <!--#endregion-->
            <!--#region Hosting Unit information-->
            <Label Content="Hosting Unit's Information"
                   Grid.Row="11" Margin="0,0.4,24,0.2" Grid.ColumnSpan="2"/>
            <Label Content="Name of the Hotel :"
                   Margin="60,33.4,24,32.6"
                   Grid.Row="11" Grid.RowSpan="3" Grid.ColumnSpan="2"/>
            <TextBox x:Name="nameHotel"
                     Grid.Row="11"
                     Margin="47.6,33.4,-187,32.6" Grid.RowSpan="3" Grid.Column="1"/>
            <Label Content="Number of adults :"
                   Margin="60,0.2,24,33.2"
                   Grid.Row="13" Grid.RowSpan="2" Grid.ColumnSpan="2"/>
            <TextBox x:Name="numAdults"
                     Grid.Row="13"
                     Margin="47.6,0.2,-59,33.2" Grid.RowSpan="2" Grid.Column="1"/>
            <Label Content="Number of children :"
                   Margin="60,0.4,24,0.2"
                   Grid.Row="14" Grid.ColumnSpan="2"/>
            <TextBox x:Name="numChildren"
                     Grid.Row="14"
                     Margin="47.6,0.4,-59,32.8" Grid.RowSpan="2" Grid.Column="1"/>
            <CheckBox 
                x:Name="JacuzziCheckBox"
                Content="Jacuzzi"
                   Grid.Column="0"
                   Grid.Row="15"
                   IsChecked="False"
                   IsThreeState="False"
                   Margin="15,14.8,39.4,-0.2"
                />
            <CheckBox  x:Name="PoolCheckBox"
                   Content="Pool"
                   Grid.Column="0"
                   Grid.Row="15"
                   Margin="100,14.8,24,-0.2"
                   IsChecked="False"
                   IsThreeState="False" Grid.ColumnSpan="2"
                />
            <CheckBox x:Name="GardenCheckBox"
                Content="Garden"
                   Grid.Row="15"
                   Margin="190,14.8,-24.2,-0.2"
                   IsChecked="False"
                   IsThreeState="False" Grid.ColumnSpan="2"
                />
            <CheckBox x:Name="ChildrenAttractionCheckBox"
                      Content="ChildrenAttraction"
                      Grid.Column="1"
                      Grid.Row="15"
                      Margin="99.6,14.8,-168.2,-0.2"
                      />

            <!--#endregion-->

        </Grid>
    </Grid>
</Window>
