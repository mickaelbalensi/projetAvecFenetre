<Window x:Class="PLWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="500.463" Width="700.845">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button x:Name="addRequestButton"
                Content="Request's options"
                Margin="10"
                FontSize="30"
                Grid.Row="0" Click="addRequestButton_Click"
                />
        <Button x:Name="addHostingUnit"
                Content="Unit's options"
                Margin="10"
                FontSize="30"
                Grid.Row="1" Click="addUnitButton_Click"
                />
        <Button x:Name="addOrder"
                Content="Order's options"
                Margin="10"
                FontSize="30"
                Grid.Row="2" Click="addOrderButton_Click"
                />


    </Grid>
</Window>
