<Window x:Class="PLWPF.HostPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF"
        mc:Ignorable="d"
        Title="HostPage" Height="500" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button x:Name="butonAddUnit"
                Content="Update an unit"
                Grid.Row="0" Click="butonAddUnit_Click">
        </Button>
        <Button x:Name="Order"
                Content="Orders"
                 Grid.Row="1" Click="Order_Click">
        </Button>
        <Button x:Name="butonDeleteUnit"
                Content="Update an unit"
                 Grid.Row="2" Click="butonDeleteUnit_Click">
        </Button>
    </Grid>
</Window>
